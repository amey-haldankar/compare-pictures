<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/imgParent1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <org.lockerz.compare.MyImageView
            android:id="@+id/captImg1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/capt_image_back"
            android:gravity="center"
            android:scaleType="matrix"
            android:src="#aeaeae" />

        <Button
            android:id="@+id/captBtn1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/capt_image_back"
            android:onClick="onCaptureBtn"
            android:text="@string/tap_to_capture_text"/>

        <ImageView
            android:id="@+id/rotLeft"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_back"
            android:clickable="true"
            android:onClick="rotateLeft"
            android:padding="5dp"
            android:src="@drawable/ic_images_rotate_left"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/capture"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_back"
            android:clickable="true"
            android:onClick="onCaptureBtn"
            android:padding="5dp"
            android:src="@drawable/ic_content_picture"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/rotRight"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_back"
            android:clickable="true"
            android:onClick="rotateRight"
            android:padding="5dp"
            android:src="@drawable/ic_images_rotate_right"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:background="#cc0000" />

    <RelativeLayout
        android:id="@+id/imgParent2"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <org.lockerz.compare.MyImageView
            android:id="@+id/captImg2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/capt_image_back"
            android:gravity="center"
            android:scaleType="matrix"
            android:src="#aeaeae" />

        <Button
            android:id="@+id/captBtn2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/capt_image_back"
            android:onClick="onCaptureBtn"
            android:text="@string/tap_to_capture_text" />

        <ImageView
            android:id="@+id/rotLeft2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_back"
            android:clickable="true"
            android:onClick="rotateLeft"
            android:padding="5dp"
            android:src="@drawable/ic_images_rotate_left"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/capture2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_back"
            android:clickable="true"
            android:onClick="onCaptureBtn"
            android:padding="5dp"
            android:src="@drawable/ic_content_picture"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/rotRight2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_back"
            android:clickable="true"
            android:onClick="rotateRight"
            android:padding="5dp"
            android:src="@drawable/ic_images_rotate_right"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>
    <ImageView
        android:id="@+id/rotLeft"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_back"
        android:clickable="true"
        android:onClick="rotateLeft"
        android:padding="5dp"
        android:src="@drawable/ic_images_rotate_left"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/capture"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_back"
        android:clickable="true"
        android:onClick="onCaptureBtn"
        android:padding="5dp"
        android:src="@drawable/ic_content_picture"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/rotRight"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_back"
        android:clickable="true"
        android:onClick="rotateRight"
        android:padding="5dp"
        android:src="@drawable/ic_images_rotate_right"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/ishare"
        android:layout_width="55dp"
        android:layout_height="55dp"
       android:layout_marginRight="20dp"
        android:background="@drawable/button_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
         android:layout_marginTop="25dp"
        android:src="@drawable/ic_socialshare" 
        android:visibility="gone"
        android:onClick="share"/>

